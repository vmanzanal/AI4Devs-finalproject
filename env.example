# Environment Variables for SEPE Templates Comparator
# Copy this file to .env and update the values

# =============================================================================
# GENERAL CONFIGURATION
# =============================================================================
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_DB=sepe_comparator
POSTGRES_USER=sepe_user
POSTGRES_PASSWORD=sepe_password_change_in_production
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password_change_in_production

# =============================================================================
# BACKEND API CONFIGURATION
# =============================================================================
BACKEND_PORT=8000
SECRET_KEY=your-secret-key-change-in-production-minimum-32-characters
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-minimum-32-characters
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS and Security
ALLOWED_HOSTS=localhost,127.0.0.1,frontend,*.localhost

# File Upload Settings
MAX_FILE_SIZE_MB=50
UPLOAD_DIRECTORY=./uploads
ALLOWED_EXTENSIONS=.pdf

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
FRONTEND_PORT=3000
VITE_API_BASE_URL=http://localhost:8000/api/v1
VITE_APP_TITLE=SEPE Templates Comparator
VITE_APP_VERSION=1.0.0

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
SEPE_BASE_URL=https://www.sepe.es

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO

# =============================================================================
# TESTING
# =============================================================================
TEST_DATABASE_URL=sqlite:///./test.db
